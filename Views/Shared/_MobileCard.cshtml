@model Mobile

    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail"> 
            <img src="@Model.ImageThumbnailUrl" alt="@Model.Name" />
            <div class="caption">
                <h4 class="pull-right">@Model.Price</h4>
                <h4>
                    <a asp-controller="Mobile" asp-action="Details" asp-route-id="@Model.MobileId">@Model.Name</a>
                </h4>
                <p>@Model.ShortDescription</p>
            </div>
            <div class="addToCart">
                <p class="button">
                    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-mobileId="@Model.MobileId">
                        Add to cart
                    </a>
                </p>
            </div>
        </div>
    </div> 